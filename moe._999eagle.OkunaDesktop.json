{
	"app-id": "moe._999eagle.OkunaDesktop",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "18.08",
	"sdk": "org.freedesktop.Sdk",
	"command": "okuna-desktop.sh",
	"finish-args": [
		/* X11 */
		"--share=ipc", "--socket=x11",
		/* Network */
		"--share=network",
		/* OpenGL */
		"--device=dri",
		/* PulseAudio */
		"--socket=pulseaudio"
	],
	"modules": [
		{
			"name": "okuna-desktop",
			"buildsystem": "simple",
			"build-commands": [
				"./build.sh"
			],
			"sources": [
				{
					"type": "archive",
					"url": "https://gitlab.com/999eagle/okuna-desktop/-/jobs/343804367/artifacts/download",
					"dest": "okuna-desktop",
					"dest-filename": "artifacts.zip",
					"sha256": "f4c6bedf0f4156eb44175b941fc87991dcc9abdbdbfc5aec9e42cdeae2d487b0"
				},
				{
					"type": "file",
					"path": "build.sh"
				},
				{
					"type": "file",
					"path": "okuna-desktop.sh"
				},
				{
					"type": "file",
					"path": "moe._999eagle.OkunaDesktop.appdata.xml"
				}
			]
		},
		{
			"name": "libx264",
			"buildsystem": "autotools",
			"cleanup": [
				"/bin",
				"/include",
				"/lib/*.la",
				"/lib/pkgconfig"
			],
			"config-opts": [
				"--enable-shared",
				"--enable-pic",
				"--disable-lavf"
			],
			"sources": [
				{
					"type": "archive",
					"url": "https://code.videolan.org/videolan/x264/-/archive/97eaef2ab82a46d13ea5e00270712d6475fbe42b/x264-97eaef2ab82a46d13ea5e00270712d6475fbe42b.tar.gz",
					"sha256": "3ba1ec601393d4eb1aaccad8246519c8479d5bdbd1eaffcece52f9ceb35af27e"
				}
			],
			"modules": [
				{
					"name": "yasm",
					"cleanup": ["*"],
					"sources": [
						{
							"type": "archive",
							"url": "http://www.tortall.net/projects/yasm/releases/yasm-1.3.0.tar.gz",
							"sha256": "3dce6601b495f5b3d45b59f7d2492a340ee7e84b5beca17e48f862502bd5603f"
						}
					]
				}
			]
		}
	]
